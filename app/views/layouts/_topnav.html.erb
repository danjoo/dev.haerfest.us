<!-- image variables -->
<% logo = image_tag("logo.png", :alt => "Home") %>
<% collections = image_tag("layout/layout_topnav_collection.png", :alt => "Collections") %>
<% collections_ul = image_tag("layout/layout_topnav_collection_ul.png", :alt => "Collections") %>
<% information = image_tag("layout/layout_topnav_information.png", :alt => "Information") %>
<% information_ul = image_tag("layout/layout_topnav_information_ul.png", :alt => "Information") %>
<% contact = image_tag("layout/layout_topnav_contact.png", :alt => "Contact") %>
<% contact_ul = image_tag("layout/layout_topnav_contact_ul.png", :alt => "Contact") %>
<% slash = image_tag("layout/layout_topnav_slash.png", :alt => "/") %>

<!-- Top Navigation -->

<%= #LINK TO COLLECTIONS AND USES BOLD IMAGE IF CURRENT

   link_to_unless ( params[:action] == "collections" ||
                    params[:action] == "styles") ,
                    collections, collections_path do
     link_to collections_ul, collections_path
   end

%>

<%= slash %>

<%= #LINK TO INFORMATION

   link_to_unless_current information, information_path do
     link_to information_ul, information_path
   end

%>

<%= slash %>

<%= #LINK TO CONTACT

   link_to_unless_current contact, contact_path do
     link_to contact_ul, contact_path
   end

%>